{
  "name": "@ldesign/git-tools",
  "version": "0.5.0",
  "description": "LDesign Git Tools - 功能强大的 Git 命令行工具和可视化界面，支持子模块管理",
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "git",
    "cli",
    "submodule",
    "web-ui",
    "version-control",
    "developer-tools"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nicepkg/ldesign-git.git"
  },
  "bin": {
    "lgit": "./bin/lgit.js",
    "ldesign-git": "./bin/lgit.js"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "build": "node scripts/build-all.js",
    "build:packages": "pnpm -r --filter \"./packages/**\" build",
    "build:core": "pnpm --filter @ldesign/git-core build",
    "build:cli": "pnpm --filter @ldesign/git-cli build",
    "build:web-ui": "pnpm --filter @ldesign/git-web-ui build",
    "build:docs": "pnpm --filter @ldesign/git-docs build",
    "dev": "pnpm -r --parallel dev",
    "dev:core": "pnpm --filter @ldesign/git-core dev",
    "dev:cli": "pnpm --filter @ldesign/git-cli dev",
    "dev:web-ui": "pnpm --filter @ldesign/git-web-ui dev",
    "dev:docs": "pnpm --filter @ldesign/git-docs dev",
    "start": "node bin/lgit.js",
    "start:ui": "node bin/lgit.js ui",
    "test": "pnpm -r test",
    "test:core": "pnpm --filter @ldesign/git-core test",
    "clean": "rimraf dist && pnpm -r exec rimraf dist",
    "type-check": "pnpm -r type-check",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "esbuild": "^0.25.12",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
